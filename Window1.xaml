        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="373,210,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Номер телефона" VerticalAlignment="Top" Width="262" TextChanged="TextBox_TextChanged" Opacity="0.5"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="356,10,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Поиск" VerticalAlignment="Top" Width="191" TextChanged="TextBox_TextChanged_1" Opacity="0.5"/>
        <Button Content="Найти" Grid.Column="1" HorizontalAlignment="Left" Margin="560,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Background="White" BorderBrush="Black"/>
    </Grid>
</Window>
