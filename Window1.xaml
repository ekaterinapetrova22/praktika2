        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="373,89,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Фамилия" VerticalAlignment="Top" Width="262" Opacity="0.5"/>
